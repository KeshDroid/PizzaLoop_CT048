<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >


    <TextView
        android:id="@+id/txtCartFoodV"
        android:layout_width="110dp"
        android:layout_height="40dp"


        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:text="Name"
        android:textSize="23sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/btn_very_rounded_blue"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:id="@+id/txtCartP1V"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@id/txtCartFoodN"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Price"
        android:textSize="23sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/btn_very_rounded_blue"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:id="@+id/txtCartQtyV"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@id/txtCartP1"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Quantity"
        android:textSize="23sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/btn_very_rounded_blue"
        android:textColor="@color/colorWhite"/>



    <TextView
        android:id="@+id/txtCartFoodN"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/txtCartFoodV"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:hint="Name"
        android:textStyle="bold"

        android:textColor="@color/colorWhite"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/txtCartP1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/txtCartFoodN"
        android:layout_alignLeft="@+id/txtCartP1V"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:hint="Price"
        android:textColor="@color/colorWhite"
        android:textSize="23sp"

        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtCartQty"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/txtCartP1"
        android:layout_alignLeft="@+id/txtCartQtyV"

        android:layout_marginLeft="140dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:hint="Quantity"
        android:textColor="@color/colorWhite"
        android:textSize="23sp"
        android:textStyle="bold"

        />






    <TextView
        android:layout_width="406dp"
        android:layout_height="2dp"
        android:background="@color/colorDBlue"
        android:layout_below="@+id/txtCartQty"
        android:layout_marginTop="10dp"/>


</RelativeLayout>