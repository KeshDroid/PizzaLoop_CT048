<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgf"
    tools:context=".MainActivity"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"

    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="273dp"
        android:layout_height="273dp"
        app:srcCompat="@drawable/logonw1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="60dp"

        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/imgTp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/imgLogo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        app:srcCompat="@android:drawable/sym_action_call" />

    <EditText
        android:id="@+id/etTp"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:layout_below="@id/imgLogo"
        android:layout_alignLeft="@id/imgTp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        android:textColorHint="#FFFFFF"/>





    <ImageView
        android:id="@+id/imgPw"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_below="@id/imgTp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@android:drawable/ic_lock_lock" />
    <EditText
        android:id="@+id/etPw"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:ems="10"
        android:layout_below="@id/etTp"
        android:layout_alignLeft="@id/imgPw"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="#FFFFFF"/>






    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:text="Sign In"
        android:background="@drawable/btn_cnr_blue"
        android:textColor="#FFFFFF"
        android:layout_below="@id/etPw"
        android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
        android:layout_marginTop="410dp"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="110dp"
        android:layout_height="42dp"
        android:text="sign up"
        app:layout_constraintVertical_bias="0.96"
        android:background="@drawable/btn_cnr_red"
        android:shadowColor="#000000"
        android:layout_below="@id/btnSignIn"
        android:layout_marginTop="459dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



</RelativeLayout>