<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Food"
    android:padding="5dp"
    android:background="@drawable/bg4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtNameUp"
            android:layout_width="375dp"
            android:layout_height="53dp"
            android:textAlignment="center"
            android:textColor="@color/colorDBlue"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/imgFoodUp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/txtName"
            android:layout_alignTop="@+id/txtName"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:background="@drawable/btn_cnr_white_normal"/>

        <LinearLayout
            android:id="@+id/li3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/txtQtyUp"
                android:layout_width="143dp"
                android:layout_height="41dp"

                android:text="New Quantity"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorDBlue"
                />

            <EditText
                android:id="@+id/eTQtyUp"
                android:layout_width="143dp"
                android:layout_height="match_parent"
                android:layout_below="@id/txtPrice"
                android:layout_marginLeft="5dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Enter Quantity"
                android:inputType="number"
                android:text=""
                android:layout_marginTop="4dp"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/li2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:id="@+id/txtPriceUp"
                android:layout_width="143dp"
                android:layout_height="41dp"
                android:layout_below="@id/txtIngDe"
                android:text="Price"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorDBlue"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/txtPriceVUp"
                android:layout_width="250dp"
                android:layout_height="41dp"
                android:layout_below="@id/txtIngDe"
                android:layout_marginLeft="5dp"

                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"/>

        </LinearLayout>



    </LinearLayout>
    <ImageButton
        android:id="@+id/btnAddCartUp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_add_shopping_cart_white_24dp"
        android:background="@drawable/btn_very_rounded_green"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>



    <ImageButton
        android:id="@+id/imgBtnGoCart1Up"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_shopping_cart_white_24dp"
        android:background="@drawable/btn_very_rounded_pink"/>


</RelativeLayout>