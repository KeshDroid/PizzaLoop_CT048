<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/imgFood"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="200dp"

        android:layout_weight="1"
        android:background="@drawable/btn_cnr_white_normal"
         />

    <TextView
        android:id="@+id/txtFoodN"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/imgFood"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:hint="Name"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="23sp"
        android:background="@drawable/btn_very_rounded_wite"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/txtP1"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@id/txtFoodN"
        android:layout_alignLeft="@id/imgFood"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:hint="Price"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="23sp"
        android:background="@drawable/btn_very_rounded_wite"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="406dp"
        android:layout_height="2dp"
        android:background="@color/colorDBlue"
        android:layout_below="@+id/imgFood"
        android:layout_marginTop="10dp"/>

</RelativeLayout>