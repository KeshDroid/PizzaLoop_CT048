<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >






    <TextView
        android:id="@+id/txtCartFoodN"

        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:hint="Name"
        android:textColor="@color/colorWhite"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtCartP1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/txtCartFoodN"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:hint="Price"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/txtCartQty"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/txtCartP1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:hint="Quantity"
        android:textColor="@color/colorPink"
        android:textSize="25sp" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp">
        <ImageButton
            android:id="@+id/imgBtnDel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_delete_white_24dp"
            android:background="@drawable/btn_very_rounded_pink"

            />

        <ImageButton
            android:id="@+id/imgBtnAdd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_add_white_24dp"
            android:background="@drawable/btn_very_rounded_pink"
            android:layout_marginTop="5dp"
            />
        <ImageButton
            android:id="@+id/imgBtnRemove"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_remove_white_24dp"
            android:background="@drawable/btn_very_rounded_pink"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="406dp"
        android:layout_height="2dp"
        android:background="@color/colorDBlue"
        android:layout_below="@+id/txtCartQty"
        android:layout_marginTop="10dp"/>


</RelativeLayout>